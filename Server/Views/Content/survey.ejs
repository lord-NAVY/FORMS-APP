<div class="container">

    <center><h1><span class="badge bg-primary">Welcome to Survey Factory</span></h1> </center>
        <p class="placeholder-glow">
          <span class="placeholder col-12"></span>
        </p><br/>

<center><a href="/add"><button type="button" class="btn btn-dark"><i class="fas fa-plus-square"></i> Create Survey</button></a></center><br/><br>
<div class="row">
<div class="col">

<table class="table table-striped table-bordered table-hover">
    <thead clas="thead" class="table-primary" style="color: black" >
        <tr>
          
            <th scope="col" >#</th>
            <th scope="col">Survey Name</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    
    
    <tbody>                

        <% for(let count=0; count < surveys.length; count++) { %>

             <% if (surveys[count].startDate < surveys[count].endDate) { %>               
                
            <% if (surveys[count].isActive===true) { %>

            <tr>
                <th scope="row"><%= count + 1 %></th>
                <td><a href="response/<%= surveys[count]._id %>"><%= surveys[count].name %></a></td>
                <td><%= surveys[count].startDate %></td>
                <td><%= surveys[count].endDate %></td>
                <td>
                    <% if (surveys[count].isActive===true) { %>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" checked disabled>                             
                    </div>
                    <% } else {%> 
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch"  disabled>                             
                    </div>
                    <%}%>
                </td>


                <td class="text-centre col-1">                            
                    <a href="/edit/<%= surveys[count]._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i> Edit </a>
                </td>
                
                <td class="text-center col-1">
                        <a href="/delete/<%= surveys[count]._id %>" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Delete</a>
                </td>
            </tr>
            <% } %>    
            <% } %>    
                    <% } %> 
    </tbody>

</table>

</div>
<div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
</div>


</div>

